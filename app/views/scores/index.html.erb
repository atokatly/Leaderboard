}

// Card styles

.mdl-card--horizontal {
  flex-direction: column;
  height: 1vh; /* 1 */
  /* padding-left: 150px; */
  width: 100%;

  .mdl-card__media {
    left: 0;
    position: absolute;
    width: 150px;
  }

  .mdl-card__supporting-text {
    flex: 1 1 auto;
    width: auto;
    text-align: center;
  }
}

  /*.bgimg-1 {
      display: inline-block;
      background-position: center;
