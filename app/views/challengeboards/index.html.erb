<p id="notice"><%= notice %></p>

<h1>Challengeboards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challengeboards.each do |challengeboard| %>
      <tr>
        <td><%= challengeboard.name %></td>
        <td><%= link_to 'Show', challengeboard %></td>
        <td><%= link_to 'Edit', edit_challengeboard_path(challengeboard) %></td>
        <td><%= link_to 'Destroy', challengeboard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Challengeboard', new_challengeboard_path %>
